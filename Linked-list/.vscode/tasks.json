{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "gcc *.c -o main"
        },
        {
            "label": "compile and exec",
            "type": "shell",
            "command": "gcc *.c -o main && ./main"
        },
        {
            "label": "compile and exec with an file",
            "type": "shell",
            "command": "gcc *.c -o main && ./main < in",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}